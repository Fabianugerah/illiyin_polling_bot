{
    "openapi": "3.0.0",
    "info": {
        "title": "Dokumentasi API",
        "description": "Documentation for API endpoints",
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/api/telegram/webhook": {
            "post": {
                "tags": [
                    "Telegram"
                ],
                "summary": "Handle Telegram Webhook",
                "description": "Menerima pilihan user dari polling Telegram dan menyimpannya ke Google Sheets.",
                "operationId": "handleTelegramWebhook",
                "responses": {
                    "200": {
                        "description": "Webhook diterima",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "ok": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/telegram/test-poll": {
            "post": {
                "tags": [
                    "Telegram"
                ],
                "summary": "Test Poll Submission",
                "description": "Endpoint untuk testing manual polling. Harus menggunakan Telegram ID sebagai user identifier.",
                "operationId": "testPollSubmission",
                "requestBody": {
                    "description": "Data polling untuk testing",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "user_id",
                                    "option",
                                    "date",
                                    "waktu"
                                ],
                                "properties": {
                                    "user_id": {
                                        "description": "Telegram User ID",
                                        "type": "string",
                                        "example": "5459494803"
                                    },
                                    "option": {
                                        "description": "Pilihan tempat sholat",
                                        "type": "string",
                                        "enum": [
                                            "Masjid",
                                            "Basecamp"
                                        ],
                                        "example": "Masjid"
                                    },
                                    "date": {
                                        "description": "Tanggal polling (YYYY-MM-DD)",
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-08-06"
                                    },
                                    "waktu": {
                                        "description": "Waktu sholat",
                                        "type": "string",
                                        "enum": [
                                            "dzuhur",
                                            "asar"
                                        ],
                                        "example": "dzuhur"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Test poll berhasil diproses",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Data berhasil disimpan ke Google Sheets"
                                        },
                                        "data": {
                                            "properties": {
                                                "user_id": {
                                                    "type": "string",
                                                    "example": "5459494803"
                                                },
                                                "option": {
                                                    "type": "string",
                                                    "example": "Masjid"
                                                },
                                                "date": {
                                                    "type": "string",
                                                    "example": "2025-08-06"
                                                },
                                                "waktu": {
                                                    "type": "string",
                                                    "example": "dzuhur"
                                                },
                                                "row_updated": {
                                                    "type": "integer",
                                                    "example": 5
                                                },
                                                "column_updated": {
                                                    "type": "string",
                                                    "example": "B"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Validation failed"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User atau kolom tidak ditemukan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "User tidak ditemukan di Google Sheets"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Telegram",
            "description": "Telegram"
        }
    ]
}