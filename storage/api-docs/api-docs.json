    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/api/telegram/webhook": {
            "post": {
                "tags": [
                    "Telegram"
                ],
                "summary": "Handle Telegram Webhook",
                "description": "Menerima pilihan user dari polling Telegram dan menyimpannya ke storage.",
                "operationId": "handleTelegramWebhook",
                "requestBody": {
                    "description": "Payload polling dari Telegram",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "user": {
                                        "type": "string",
                                        "example": "Fabian"
                                    },
                                    "option": {
                                        "description": "Pilihan tempat",
                                        "type": "string",
                                        "enum": [
                                            "Masjid",
                                            "Basecamp"
                                        ],
                                        "example": "Masjid"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Webhook diterima",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "ok": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Telegram",
            "description": "Telegram"
        }
    ]
}